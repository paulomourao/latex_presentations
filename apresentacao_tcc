\title[{\sc Risco Moral e o Sistema de Sa\'ude Suplementar} \hspace{0.8cm} \insertframenumber/\inserttotalframenumber]{{\sc Risco Moral e o Mercado de Sa\'ude Suplementar na Regi\~ao Nordeste do Brasil }}
\author[Paulo S\'ilvio Mour\~ao Veras Filho --- {\sc 22/06/2018}]{{Paulo S\'ilvio Mour\~ao Veras Filho} \\{Orienta\c{c}\~ao: Prof\textsuperscript{a}. Edivane de Sousa Lima}}
\date{22 de Junho de 2018}
\institute{Universidade Federal do Piau\'i - UFPI \\ Departamento de Economia - DECON \\ Teresina, PI}

